{% extends "PolytechJMBundle:Default:layout.html.twig" %}


{% block body %}
    <div class="container">
        <div class="row">
            <h1>Liste des électeurs pour {{ election.nom }}</h1>

            <table class="table table-hover records_list">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>E-mail</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.prenom }} {{ entity.nom }}</td>
                        <td>{{ entity.email }}</td>
                        <td><a class="btn btn-default btn-sm" href="{{ path('crud_electeur_delete_check', { 'id': entity.id }) }}">Supprimer</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="row">
            <a class="btn btn-default" href="{{ path('crud_electeur_new', {'id': election.id}) }}">Ajouter un électeur</a>
            <a class="btn btn-default" href="{{ path('crud_election_show', {'id': election.id}) }}">
                Retourner à l'élection
            </a>
        </div>

                
        </div>
    </div>
{% endblock %}
